            <font>
                <Font name="Arial Rounded MT Bold" size="24.0" />
            </font>
        </Label>
        <GridPane hgap="10" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="232.0" prefWidth="276.0" vgap="10">
