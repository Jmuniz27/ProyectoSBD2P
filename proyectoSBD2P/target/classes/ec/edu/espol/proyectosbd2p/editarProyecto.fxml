<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ec.edu.espol.proyectosbd2p.EditarProyectoController">
    <children>
        <Label text="Editar Proyecto" />
        <GridPane hgap="10" vgap="10">
            <children>
                <Label text="ID Proyecto:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="txtIDProyecto" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                <Label text="Título:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <TextField fx:id="txtTitulo" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                <Label text="Presupuesto:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <TextField fx:id="txtPresupuesto" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                <Label text="Descripción:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                <TextField fx:id="txtDescripcion" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                <Label text="Fecha Inicio:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                <DatePicker fx:id="dpFechaInicio" GridPane.rowIndex="4" GridPane.columnIndex="1" />

                <Label text="Fecha Fin:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                <DatePicker fx:id="dpFechaFin" GridPane.rowIndex="5" GridPane.columnIndex="1" />

                <Label text="RUC Cliente:" GridPane.rowIndex="6" GridPane.columnIndex="0" />
                <TextField fx:id="txtRuc" GridPane.rowIndex="6" GridPane.columnIndex="1" />

                <Label text="Número Factura:" GridPane.rowIndex="7" GridPane.columnIndex="0" />
                <TextField fx:id="txtNumFactura" GridPane.rowIndex="7" GridPane.columnIndex="1" />

                <Label text="ID Dep. Creativo:" fx:id="lblIdDepCreativo" GridPane.rowIndex="8" GridPane.columnIndex="0" visible="false"/>
                <TextField fx:id="txtIdDepCreativo" GridPane.rowIndex="8" GridPane.columnIndex="1" visible="false"/>

                <Label text="ID Dep. Producción:" fx:id="lblIdDepProd" GridPane.rowIndex="9" GridPane.columnIndex="0" visible="false"/>
                <TextField fx:id="txtIdDepProd" GridPane.rowIndex="9" GridPane.columnIndex="1" visible="false"/>

                <Label text="Comisión a Empresa:" GridPane.rowIndex="10" GridPane.columnIndex="0" />
                <TextField fx:id="txtComisionAEmpresa" GridPane.rowIndex="10" GridPane.columnIndex="1" />

                <Label text="Duración:" fx:id="lblDuracion" GridPane.rowIndex="11" GridPane.columnIndex="0" visible="false"/>
                <TextField fx:id="txtDuracion" GridPane.rowIndex="11" GridPane.columnIndex="1" visible="false"/>

                <Label text="Tamaño Banner:" fx:id="lblTamanoBanner" GridPane.rowIndex="12" GridPane.columnIndex="0" visible="false"/>
                <TextField fx:id="txtTamanoBanner" GridPane.rowIndex="12" GridPane.columnIndex="1" visible="false"/>

                <Label text="Categoría:" fx:id="lblCategoria" GridPane.rowIndex="13" GridPane.columnIndex="0" visible="false"/>
                <TextField fx:id="txtCategoria" GridPane.rowIndex="13" GridPane.columnIndex="1" visible="false"/>

                <Label text="Precio:" fx:id="lblPrecio" GridPane.rowIndex="14" GridPane.columnIndex="0" visible="false"/>
                <TextField fx:id="txtPrecio" GridPane.rowIndex="14" GridPane.columnIndex="1" visible="false"/>

                <Label text="Rating:" fx:id="lblRating" GridPane.rowIndex="15" GridPane.columnIndex="0" visible="false"/>
                <TextField fx:id="txtRating" GridPane.rowIndex="15" GridPane.columnIndex="1" visible="false"/>

                <Label text="Estado:" fx:id="lblEstado" GridPane.rowIndex="16" GridPane.columnIndex="0" visible="false"/>
                <CheckBox fx:id="chkEstado" GridPane.rowIndex="16" GridPane.columnIndex="1" visible="false"/>
            </children>
        </GridPane>
        <Button text="Guardar Cambios" onAction="#guardarCambios" />
    </children>
    <padding>
        <Insets top="10" right="20" bottom="10" left="20" />
    </padding>
</VBox>
